@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">处理维保任务</a></li>
            @*<li ><a href="#">扩展信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">当前状态</th>
                    <td class="formValue" colspan="3">
                        执行中
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">操作</th>
                    <td class="formValue" colspan="3">
                       <select>
                           <option>提交结果</option>
                           <option>转给其他人处理</option>
                       </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">操作后状态</th>
                    <td class="formValue" colspan="3">
                        待完成
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">指派给</th>
                    <td class="formValue" colspan="3">
                      <input type="text" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle" valign="top" style="padding-top: 5px;">
                        任务描述
                    </th>
                    <td class="formValue" colspan="3">
                        <textarea id="F_Remark" name="F_Remark" class="form-control" style="height: 60px;"></textarea>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
